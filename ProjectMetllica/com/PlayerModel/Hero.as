package  com.PlayerModel{		import com.PlayerModel.PlayerModel;	import flash.display.Stage;	import flash.events.*;	import flash.ui.Keyboard;		public class Hero extends PlayerModel{				private var facingLeft:Boolean = false;				public function Hero(stageRef:Stage,xPos:Number,yPos:Number,width:Number,height:Number) {						super(stageRef,xPos,yPos,width,height);			init();		}		private function init():void		{			trace(parent);			//Listen for Key Up Key Down event			stageRef.addEventListener(KeyboardEvent.KEY_UP,onKeyUp,false,0,true);			stageRef.addEventListener(KeyboardEvent.KEY_DOWN,onKeyDown,false,0,true);					}		private function onKeyDown(evt:KeyboardEvent):void		{						//Check for up, down, left, right			moving(evt);					}		private function onKeyUp(evt:KeyboardEvent):void		{			deccelerate(evt);		}		private function moving(evt:KeyboardEvent):void		{			//Direction player is facing			facingDirection(evt);			//UP and DOWN keys			if(evt.keyCode == Keyboard.UP)			{trace("UP");				if(this.vy == 0 && !inTheAir)				{					this.vy = -11.5;					this.friction = 1;					isInTheAir = true;				}							}			else if(evt.keyCode == Keyboard.DOWN)			{				//this.vy = 5;			}			//LEFT and RIGHT keys			if(evt.keyCode == Keyboard.LEFT)			{				if(this.vx > -5)				{					this.ax = -.2;					this.friction = 1;				}else{					this.ax = 0;					this.friction = 1;				}							}			else if(evt.keyCode == Keyboard.RIGHT)			{				if(this.vx < 5)				{					this.ax = .2;					this.friction = 1;				}else{					this.ax = 0;					this.friction = 1;				}			}		}		private function deccelerate(evt:KeyboardEvent):void		{			//UP and DOWN keys			if(evt.keyCode == Keyboard.UP )			{				this.ay = 0;			}			//LEFT and RIGHT keys			if(evt.keyCode == Keyboard.LEFT || evt.keyCode == Keyboard.RIGHT)			{				this.ax = 0;				this.friction = .9;			}		}		private function facingDirection(evt:KeyboardEvent):void		{			if(evt.keyCode  == Keyboard.RIGHT)			{				if(this.facingLeft)				{					this.scaleX *= -1;					this.facingLeft = false;				}			}else if(evt.keyCode  == Keyboard.LEFT)			{				if(!this.facingLeft)				{					this.scaleX *= -1;					this.facingLeft = true;				}			}		}	}	}