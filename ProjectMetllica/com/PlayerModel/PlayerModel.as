package  com.PlayerModel{		import flash.display.Sprite;	import com.Utils.StageBoundery;	import flash.display.Stage;		public class PlayerModel extends Sprite{		//var xPos:Number = 0;		//var yPos:Number = 0;		var vx:Number = 0;		var vy:Number = 0;		var playerWidth:Number = 0;		var playerHeight:Number = 0;		var health:Number = 0;		var energy:Number = 0;		var critChance:Number = 0;		var moveSpeed:Number = 0;		var attackSpeed:Number = 0;		var stageRef:Stage;				//Graphics		var player:Sprite;				public function PlayerModel(stageRef:Stage,xPos:Number,yPos:Number) {						this.stageRef = stageRef;			this.x = xPos;			this.y = yPos;			playerWidth = 20;			playerHeight = 30;			init();					}		protected function init():void		{			player = new Sprite();			this.addChild(player);			draw();		}		public function draw():void		{			player.graphics.clear();			player.graphics.beginFill(0x0000FF);			player.graphics.drawRect(-10,-15,20,30);			player.graphics.endFill();		}		public function update():void		{					}		public function get myBottom():Number		{			return this.y + (playerHeight*.5);		}	}	}