package  com.Utils{		import flash.display.Sprite;	import flash.text.*;	import flash.display.Shape;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.display.Stage;		public class StatusBox extends Sprite{				//Memeber variables		var box:Sprite = new Sprite();		var _textField:TextField = new TextField();		var _textFormat:TextFormat = new TextFormat();		var boxWidth:Number;		var boxHeight:Number;		var stageRef:Stage;				public function StatusBox(stageRef:Stage) {			// constructor code			//this.addEventListener(Event.ADDED_TO_STAGE,init,false,0,true);			this.stageRef = stageRef;			init();		}		private function init():void		{			//Text Format settings			_textFormat.size = 12;			_textFormat.color = 0xFFFFFF;			_textFormat.font = "Menlo";						//Text Field			_textField.defaultTextFormat = _textFormat;			_textField.autoSize = TextFieldAutoSize.LEFT;			this.addChild(box);			box.addChild(_textField);			draw();						this.addEventListener(MouseEvent.MOUSE_DOWN,onMouseDown,false,0,true);		}		public function set text(textContent:String):void		{			_textField.text = textContent;						draw();		}		public function draw():void		{			//Draw box wth border			box.graphics.clear();			box.graphics.beginFill(0x000000);			box.graphics.lineStyle(2.5,0xFF00FF);			box.graphics.drawRect(0,0,_textField.width,_textField.height);			box.graphics.endFill();								}		private function onMouseDown(evt:MouseEvent):void		{			this.addEventListener(MouseEvent.MOUSE_UP,onMouseUp,false,0,true);			this.startDrag();		}		private function onMouseUp(evt:MouseEvent):void		{			this.stopDrag();			this.removeEventListener(MouseEvent.MOUSE_UP,onMouseUp);		}	}	}